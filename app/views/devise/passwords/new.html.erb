<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-password'}) do |f| %>
  <h2 class="form-signin-heading">Forgot your password?</h2>
  <%= display_errors_for_devise %>
  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email"%>
  <br/>

  <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
  <br/>
  <%= render "devise/shared/links" %>
<% end %>
