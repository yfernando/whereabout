<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Latest Activity</h1>
      <% @activities.each do |activity| %>
        <div class="alert alert-info" role="alert">
          <%= image_tag activity.who.gravatar_url %>
          <kbd><%= activity.who.email %></kbd> has <%= activity.what %>
        </div>
      <% end %>
    </div>
  </div>
</div>
